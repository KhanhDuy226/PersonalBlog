@{
    ViewData["Title"] = "Detail";
}
@model Blog

<body class="">

    <h1 class="text-capitalize text-center">
        <span>@Model.Title</span>
    </h1>

    <img src="@Model.ImageURL" alt="" width="80%">

    <div class="container" id="blog_content_@Model.ID">
        <input type="hidden" class="blog_content mb-5" name="blog_content_@Model.ID" value="@Model.Content">
    </div>
</body>

<script>
    let Contents = document.getElementsByClassName("blog_content");
    for (i = 0; i < Contents.length; i++) {
        let target = document.getElementById(Contents[i].name);
        target.innerHTML = Contents[i].value;
    }
</script>

@if (ViewData["ErrorMessage"] != null)
{
    <script>
        Swal.fire({
            title: 'Are you sure?',
            text: "You won't be able to revert this!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                Swal.fire(
                    'Deleted!',
                    'Your blog has been deleted.',
                    'success'
                )
            }
        })
    </script>
}