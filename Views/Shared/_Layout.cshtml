@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewData["Title"] - myBlog</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <link rel="stylesheet" href="~/css/_layout.css">
</head>

<body>

    <header>
        <nav class="navbar-total">
            <div class="nav-header container">
                <a href="" class="navbar-brand">My Blog</a>
                <div class="navbar-nav-menu ml-auto">
                    @if (ViewData["isAdmin"] != null)
                    {
                        <a asp-controller="admin" asp-action="home">Home</a>
                    }
                    else{
                        <a asp-controller="home" asp-action="index">Home</a>
                    }

                    <a asp-controller="home" asp-action="contact">Contact</a>
                    <a href="">Blog</a>
                    <a asp-controller="home" asp-action="about">About</a>
                    @if (ViewData["isAdmin"] != null)
                    {
                        <div class="option-menu">
                            <div class="dropdown">
                                <ion-icon name="apps-outline" class="dropdown__selected"></ion-icon>

                                <ul class="dropdown__list">
                                    <li class="dropdown__item">
                                        <a asp-controller="Blog" asp-action="CreateBlog"
                                        class="text-decoration-none text-white dropdown__text">
                                            <span>New Blog</span>
                                            <i class="fa fa-plus-circle dropdown__icon "></i>
                                        </a>
                                    </li>

                                    <li class="dropdown__item">
                                        <a asp-controller="Blog" asp-action="CreateBlog"
                                        class="text-decoration-none text-white dropdown__text">
                                            <span>View profile</span>
                                            <i class="fa fa-user dropdown__icon"></i>
                                        </a>
                                    </li>

                                    <li class="dropdown__item">
                                        <a asp-controller="Blog" asp-action="CreateBlog"
                                        class="text-decoration-none text-white dropdown__text">
                                            <span>Settings</span>
                                            <i class="fa fa-cog dropdown__icon"></i>
                                        </a>
                                    </li>

                                    <li class="dropdown__item">
                                        <a asp-controller="admin" asp-action="logout"
                                        class="text-decoration-none text-white dropdown__text">
                                            <span>Logout</span>
                                            <i class="fa fa-circle dropdown__icon"></i>
                                        </a>
                                    </li>
                                </ul>

                            </div>

                        </div>
                    }
                </div>
            </div>
        </nav>

    </header>

    <div class="main">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- footer -->
    <footer class="footer">
        <div class="social-links">
            <a href="#"><i class="fab fa-facebook-f"></i></a>
            <a href="#"><i class="fab fa-twitter"></i></a>
            <a href="#"><i class="fab fa-instagram"></i></a>
            <a href="#"><i class="fab fa-pinterest"></i></a>
        </div>
        <span>Music Blog - Enjoy follow your way!</span>
    </footer>
    <!-- end of footer -->

    <!-- link icon  -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    <link rel="stylesheet" href="~/css/stylecontact.css">
    <link rel="stylesheet" href="~/css/stylehome.css">
    <link rel="stylesheet" href="~/css/stylecreateblog.css">

    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Font awesome icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css"
        integrity="sha512-+4zCK9k+qNFUR5X+cKL9EIR+ZOhtIloNl9GIKS57V1MyNsYpYcUrUeQc9vNfzsWfV28IaLL3i96P9sdNyeRssA=="
        crossorigin="anonymous" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>